@model SalonAplikacija.Knockout.ViewModels.LoginViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title></title>
    <link href="~/css/LoginStyles/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/LoginStyles/font-awesome.min.css" rel="stylesheet" />
    <link href="~/css/LoginStyles/icon-font.min.css" rel="stylesheet" />
    <link href="~/css/LoginStyles/animate.css" rel="stylesheet" />
    <link href="~/css/LoginStyles/hamburgers.min.css" rel="stylesheet" />
    <link href="~/css/LoginStyles/animsition.min.css" rel="stylesheet" />
    <link href="~/css/LoginStyles/select2.min.css" rel="stylesheet" />
    <link href="~/css/LoginStyles/util.css" rel="stylesheet" />
    <link href="~/css/LoginStyles/main.css" rel="stylesheet" />
    <style>

        .typewriter {
            margin-bottom: 40px;
        }

            .typewriter h2 {
                text-align: center;
                color: gray;
                font-family: Montserrat-Regular;
                overflow: hidden; /* Ensures the content is not revealed until the animation */
                border-right: .15em solid orange; /* The typwriter cursor */
                white-space: nowrap; /* Keeps the content on a single line */
                margin: 0 auto; /* Gives that scrolling effect as the typing happens */
                letter-spacing: .15em; /* Adjust as needed */
                animation: typing 3.5s steps(30, end), blink-caret .5s step-end infinite;
            }

        @@keyframes typing {
            from {
                width: 0
            }

            to {
                width: 80%
            }
        }

        @@keyframes blink-caret {
            from, to {
                border-color: transparent
            }

            50% {
                border-color: black;
            }
        }
    </style>
</head>
<body style="background-color: #666666;">
    <div class="limiter">
        <div class="container-login100">
            <div class="wrap-login100">
                <form class="login100-form validate-form" method="post" asp-controller="Account" asp-action="Login" asp-route-returnUrl="@ViewData["ReturnUrl"]">
                    <div class="typewriter">
                        <h2>Sign in here please</h2>
                    </div>
                    <div class="wrap-input100 validate-input" data-validate="Valid email is required: ex@abc.xyz">
                        <input class="input100" type="text" name="Email">
                        <span class="focus-input100"></span>
                        <span class="label-input100">Email</span>
                    </div>


                    <div class="wrap-input100 validate-input" data-validate="Password is required">
                        <input class="input100" type="password" name="Password">
                        <span class="focus-input100"></span>
                        <span class="label-input100">Password</span>
                    </div>

                    <div class="flex-sb-m w-full p-t-3 p-b-32">
                        <div class="contact100-form-checkbox">
                            <input class="input-checkbox100" id="ckb1" type="checkbox" name="RememberMe">
                            <label class="label-checkbox100" for="ckb1">
                                Remember me
                            </label>
                        </div>
                    </div>
                    <div class="container-login100-form-btn">
                        <button class="login100-form-btn">
                            Login
                        </button>
                        <a asp-action="Index" asp-controller="Home" style="margin-top:20px;">Go back and create an account</a>
                    </div>
                </form>
                <div class="login100-more" style="background-image: url('/images/salon.jpg');">
                </div>
            </div>
        </div>
    </div>

    <environment include="Development">
        <script src="~/js/LoginScripts/jquery-3.2.1.min.js"></script>
        <script src="~/js/LoginScripts/animsition.min.js"></script>
        <script src="~/js/LoginScripts/popper.js"></script>
        <script src="~/js/LoginScripts/bootstrap.min.js"></script>
        <script src="~/js/LoginScripts/select2.min.js"></script>
        <script src="~/js/LoginScripts/moment.min.js"></script>
        <script src="~/js/LoginScripts/daterangepicker.js"></script>
        <script src="~/js/LoginScripts/countdowntime.js"></script>


        <script>
            $(function () {

                $(".login100-more").hide();
                $(".login100-form").hide();

                $(".login100-more").fadeIn(1500);
                $(".login100-form").fadeIn(1500);
            });
        </script>
    </environment>
</body>
</html>


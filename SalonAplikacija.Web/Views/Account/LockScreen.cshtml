@model UnlockScreenViewModel
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@
@{ 
    Layout = null;
}

<!doctype html>
<html lang="en" class="fullscreen-bg">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0">
    <!-- VENDOR CSS -->

    <link href="~/css/AdminStyles/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/AdminStyles/font-awesome.min.css" rel="stylesheet" />
    <link href="~/css/AdminStyles/style.css" rel="stylesheet" />
    <link href="~/css/AdminStyles/main.css" rel="stylesheet" />
 
    <!-- GOOGLE FONTS -->
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700" rel="stylesheet">
    <!-- ICONS -->
  
</head>

<body>
    <!-- WRAPPER -->
    <div id="wrapper">
        <div class="vertical-align-wrap">
            <div class="vertical-align-middle">
                <div class="auth-box lockscreen clearfix">
                    <div class="content">
                        <h1 class="sr-only">Klorofil - Free Bootstrap dashboard</h1>
                        <div class="user text-center">
                            <img src="~/images/user-medium.png" class="img-circle" alt="Avatar">
                            <h2 class="name">Samuel Gold</h2>
                        </div>
                        <form method="post" action="/Account/UnlockScreen">
                            <input type="hidden" value="@Model.Email" name="email"/>
                            <div class="input-group">
                                <input asp-for="Password" class="form-control" placeholder="Enter your password to unlock the screen.." />
                                <span class="input-group-btn"><button type="submit" class="btn btn-primary"><i class="fa fa-arrow-right"></i></button></span>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- END WRAPPER -->
</body>

</html>

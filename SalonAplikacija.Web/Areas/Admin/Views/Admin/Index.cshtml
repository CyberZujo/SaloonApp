<head>
    <link href="~/css/AdminStyles/bootstrap.css" rel="stylesheet" />
    <link href="~/css/AdminStyles/font-awesome.min.css" rel="stylesheet" />
    <link href="~/css/AdminStyles/main.css" rel="stylesheet" />
    <link href="~/css/AdminStyles/style.css" rel="stylesheet" />
</head>
<div id="wrapper">
    <div class="vertical-align-wrap">
        <div class="vertical-align-middle">
            <div class="auth-box ">
                <div class="left">
                    <div class="content" style="width:95%;">
                        <div class="header">
                            <div class="logo text-center"><img src="~/Content/krypton/NewFolder1/img/krypton2.png" width="200" height="190" alt="Klorofil Logo"></div>

                        </div>
                        <form class="form-auth-small" action="/Admin/Admin/Login" method="post">
                            <div class="form-group">
                                <label for="signin-email" class="control-label sr-only">Username</label>
                                <input type="text" class="form-control" name="Username" placeholder="Username">
                            </div>
                            <div class="form-group">
                                <label for="signin-password" class="control-label sr-only">Password</label>
                                <input type="password" class="form-control" id="signin-password" name="Password" placeholder="Password">
                            </div>

                            <button type="submit" class="btn btn-primary btn-lg btn-block">LOGIN</button>
                            @*<div class="bottom">
                                    <span class="helper-text"><i class="fa fa-lock"></i> <a href="#">Forgot password?</a></span>
                                </div>*@
                        </form>
                    </div>
                </div>
                <div class="right">
                    <div class="overlay"></div>
                    <div class="content text">
                        <h1 class="heading">Krypton</h1>
                        <p>by M&H</p>
                    </div>
                </div>
                <div class="clearfix"></div>
            </div>
        </div>
    </div>
</div>

@model List<ServicesGetVM>
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@
<table id="dataTable" class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Option</th>
            <th>Option</th>
        </tr>
    </thead>
    <tbody id="clientsData">
        @foreach (var service in Model)
        {
            <tr>
                <td>@service.Name</td>
                <td>@service.Price</td>
                <td>
                    <button type="button" class="btn btn-sm btn-primary" data-toggle="modal" data-target="#myModal" onclick="UpdateClient(@service.ServiceId)">
                        Edit
                    </button>
                </td>
                <td><button class="btn btn-sm btn-success" data-toggle="modal" data-target="#myModal" id="btnRemoveClient" onclick="RemoveClient(@service.ServiceId)">Remove</button></td>
            </tr>
        }
    </tbody>
</table>


<script>
    $("#dataTable").DataTable();
</script>
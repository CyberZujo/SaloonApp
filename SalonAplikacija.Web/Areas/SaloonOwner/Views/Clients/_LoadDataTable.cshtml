@model List<ClientsGetVM>
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@

<table id="dataTable" class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Name</th>
            <th>City</th>
            <th>Type</th>
            <th>Address</th>
            <th>Phone</th>
            <th>Option</th>
            <th>Option</th>
            <th>Option</th>
        </tr>
    </thead>
    <tbody id="clientsData">
        @foreach (var client in Model)
        {
            <tr>
                <td>@client.FirstName @client.LastName</td>
                <td>@client.CityName</td>
                <td>@client.TypeOfClient</td>
                <td>@client.Address</td>
                <td>@client.Phone</td>
                <td>
                    <button type="button" class="btn btn-sm btn-primary" data-toggle="modal" data-target="#myModal" onclick="UpdateClient(@client.ClientId)">
                        Edit
                    </button>
                </td>
                <td><button class="btn btn-sm btn-success" data-toggle="modal" data-target="#myModal" value="@client.ClientId" onclick="RemoveClient(@client.ClientId)">Remove</button></td>
                <td><a asp-action="Details" asp-controller="Clients" asp-route-id="@client.ClientId" class="btn btn-sm btn-success">See details</a></td>

            </tr>
        }
    </tbody>
</table>

<script>
    $("#dataTable").DataTable();
</script>
